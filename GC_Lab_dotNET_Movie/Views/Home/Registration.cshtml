@model GC_Lab_dotNET_Movie.Models.Movie

@{
    ViewData["Title"] = "View";

}

<div class="text-center container pb-3">
    <h1 class="display-4">Movie Registration</h1>
    <p>Please fill out and submit the following form to register a movie.</p>
</div>

<div action="" class="container">
    <form method="post" asp-action="Result">

        <div class="form-group row">
            <label for="Title" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input asp-for="Title" type="text" class="form-control" name="Title" id="Title" placeholder="Title">
            </div>
        </div>

        <div class="form-group row">
            <label for="Genre" class="col-sm-2 col-form-label">Genre</label>
            <div class="col-sm-10">
                <select asp-for="Genre" class="form-control" id="Genre">
                    <option>Action</option>
                    <option>Animation</option>
                    <option>Comedy</option>
                    <option>Drama</option>
                    <option>Horror</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="Year" class="col-sm-2 col-form-label">Year</label>
            <div class="col-sm-10">
                <input asp-for="Year" type="text" class="form-control" name="Year" id="Year" placeholder="Year">
            </div>
        </div>

        <div class="form-group row">
            <label for="Actors" class="col-sm-2 col-form-label">Actors</label>
            <div class="col-sm-10">
                <input asp-for="Actors" type="text" class="form-control" name="Actors" id="Actors" placeholder="Actors">
            </div>
        </div>

        <div class="form-group row">
            <label for="Directors" class="col-sm-2 col-form-label">Directors</label>
            <div class="col-sm-10">
                <input asp-for="Directors" type="text" class="form-control" name="Directors" id="Directors" placeholder="Directors">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

    </form>
</div>
